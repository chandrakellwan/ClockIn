<div class="col s3 col-1 emp-card">
    <div class="col s12">
        <div class="card off-white-bg">
            <div class="profile-pic"></div>
            <div class="card-content">
                <span class="card-title name">{{ data.name }}</span>
                <img src="{{data.imageURL}}" alt="" class="circle responsive-img center-align" style="height: 100px; width: 100px">
                 {{#if data.isManager}}
                <div class="manager-badge">Manager</div>
                {{/if}}
            </div>
            <div class="card-action">
            {{#if data.isManager}}
            
				<button class = "btn modal-trigger" data-target = "addShift" id = "btnAddShift">Add Shift</button>
                <button class = "btn modal-trigger" data-target = "addEmployee" id = "btnAddEmployee">Add Employee</button>
            {{/if}}
                <button class = "btn modal-trigger" data-target = "setAvailability" id = "btnSetAvailability">SEt Availability</button>
            </div>
        </div>
    </div>
</div>